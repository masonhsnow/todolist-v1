<%- include('header') -%>
<div class="box" id="heading">
  <h1><%= listTitle %></h1>
</div>

<div class="box">
  <% newListItems.forEach(item => { %>
  <div class="item">
    <input type="checkbox" />
    <p><%=item%></p>
  </div>
  <% }); %>

  <form class="item" method="post" action="/">
    <input
      name="newItem"
      type="text"
      placeholder="New Item"
      autocomplete="off"
    />
    <button type="submit" name="list" value="<%= listTitle %>">+</button>
  </form>
</div>
<%- include('footer') %>
